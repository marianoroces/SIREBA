<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CheckReportsActivity">

    <TextView
        android:id="@+id/checkRpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/checkRPTitleTopMargin"
        android:layout_marginStart="@dimen/checkRPTitleStartMargin"
        android:text="@string/checkRpTitle"
        android:textSize="@dimen/createActTitleTextSize"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/checkRpReciclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/checkRPRecyclerMargins"
        android:layout_marginEnd="@dimen/checkRPRecyclerMargins"
        android:layout_marginTop="@dimen/checkRPRecyclerMargins"
        android:paddingBottom="@dimen/checkRPRecyclerPaddingBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkRpTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>